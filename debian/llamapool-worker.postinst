#!/bin/sh
set -e
case "$1" in
  configure)
    if ! getent group llamapool >/dev/null; then
      addgroup --system llamapool
    fi
    if ! id -u llamapool >/dev/null 2>&1; then
      adduser --system --ingroup llamapool --no-create-home --home /nonexistent --shell /usr/sbin/nologin llamapool
    fi
    ;;
esac
