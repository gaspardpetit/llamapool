#!/bin/sh
set -e
case "$1" in
  configure)
    if ! getent group infero >/dev/null; then
      addgroup --system infero
    fi
    if ! id -u infero >/dev/null 2>&1; then
      adduser --system --ingroup infero --no-create-home --home /nonexistent --shell /usr/sbin/nologin infero
    fi
    ;;
esac
