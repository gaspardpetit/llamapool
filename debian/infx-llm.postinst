#!/bin/sh
set -e
case "$1" in
  configure)
    if ! getent group infx >/dev/null; then
      addgroup --system infx
    fi
    if ! id -u infx >/dev/null 2>&1; then
      adduser --system --ingroup infx --no-create-home --home /nonexistent --shell /usr/sbin/nologin infx
    fi
    ;;
esac
